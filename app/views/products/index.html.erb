<h1>Products</h1>

<!-- button add a new product -->
<div class="needbutton"><%= link_to "Add a New Product", new_product_path %></div>
<br>
<table class="table table-striped">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Category</th>
    <th>SHOW</th>
    <th>EDIT</th>
    <th>DELETE</th>
  </tr>
  <% @products.each do |current_product| %>
    <tr>
      <td><%= current_product.id %></td>
      <td><%= current_product.name %></td>
      <td><%= current_product.price %></td>
      <td><%= current_product.category.name unless current_product.category == nil %></td>
      <td><%= link_to "show", product_path(current_product.id) %></td>
      <td><%= link_to "edit", edit_product_path(current_product.id) %></td>
      <td><%= link_to "delete", product_path(current_product.id),
              method: :delete %></td>
    </tr>
  <% end %>

</table>
